<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="container">
    <%- if current_user %>
      <%= current_user.email %>
      <br/>
      <%= link_to 'cerrar session', signout_path, method: :delete %>
      <%- else %>
      <%= link_to 'Iniciar session', signin_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
